generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Post {
  id        Int      @id @default(autoincrement())  // Equivalent to the `_id` in MongoDB
  author    String
  title     String
  summary   String
  content   String
  category  String
  cover     String
  createdAt DateTime @default(now())                // Equivalent to Mongoose's `timestamps: true`
  updatedAt DateTime @updatedAt                     // Automatically set on update, like Mongoose's `timestamps: true`
}
